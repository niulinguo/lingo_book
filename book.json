  "pluginsConfig": {
    "insert-logo": {
      "url": "https://raw.githubusercontent.com/niulinguo/lingo_book/master/images/logo.png",
      "style": "background: none; max-height: 30px; min-height: 30px"
    },
    "code": {
      "copyButtons": true
    },
    "github": {
      "url": "https://github.com/niulinguo"
    },
    "sharing": {
      "douban": false,
      "facebook": false,
      "google": true,
      "pocket": false,
      "qq": false,
      "qzone": true,
      "twitter": false,
      "weibo": true,
      "all": [
        "douban",
        "facebook",
        "google",
        "instapaper",
        "linkedin",
        "twitter",
        "weibo",
        "messenger",
        "qq",
        "qzone",
        "viber",
        "whatsapp"
      ]
    },
    "tbfed-pagefooter": {
      "copyright": "Copyright &copy www.niulinguo.com 2020",
      "modify_label": "该文件修订时间：",
      "modify_format": "YYYY-MM-DD HH:mm:ss"
    },
    "donate": {
      "wechat": "https://raw.githubusercontent.com/niulinguo/lingo_book/master/images/wechat_pay.png",
      "alipay": "https://raw.githubusercontent.com/niulinguo/lingo_book/master/images/ali_pay.jpeg",
      "title": "请我喝杯咖啡吧",
      "button": "赏",
      "alipayText": "支付宝打赏",
      "wechatText": "微信打赏"
    },
    "favicon": "http://img5.imgtn.bdimg.com/it/u=165670367,2479347840&fm=26&gp=0.jpg",
    "hide-element": {
      "elements": [
        ".gitbook-link",
        ".treeview__container-title"
      ]
    }
