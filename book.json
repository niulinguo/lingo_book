{
  "root": "./docs",
  "title": "《Lingo Book》",
  "author": "Lingo.Niu",
  "description": "记录 Lingo.Niu 的学习历程",
  "language": "zh-hans",
  "links": {
    "sidebar": {
      "Github": "https://github.com/niulinguo"
    }
  },
  "styles": {
    "website": "styles/website.css",
    "ebook": "styles/ebook.css",
    "pdf": "styles/pdf.css",
    "mobi": "styles/mobi.css",
    "epub": "styles/epub.css"
  },
  "plugins": [
    "-search",
    "back-to-top-button",
    "expandable-chapters-small",
    "insert-logo",
    "chapter-fold",
    "expandable-chapters",
    "code",
    "copy-code-button",
    "todo",
    "-lunr",
    "-search",
    "search-pro",
    "advanced-emoji",
    "github",
    "emphasize",
    "splitter",
    "-sharing",
    "sharing-plus",
    "tbfed-pagefooter",
    "page-treeview",
    "simple-page-toc",
    "page-toc-button",
    "donate",
    "alerts",
    "flexible-alerts",
